rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {

    function isEditor() {
      return request.auth != null
        && (request.auth.token.admin == true || request.auth.token.editor == true);
    }

    // posts: 공개 읽기, editor/admin만 쓰기
    match /posts/{postId} {
      allow read: if true;
      allow create, update: if isEditor();
      allow delete: if isEditor();
    }

    // categories: 공개 읽기, editor/admin만 쓰기
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isEditor();
    }

    // users: 본인 문서만 읽기/쓰기
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // drafts: Cloud Functions(admin SDK)로만 접근, 클라이언트 차단
    match /drafts/{draftId} {
      allow read, write: if false;
    }
  }
}
